<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Schulte3X3Activity">

    <Button
        android:id="@+id/start3x3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:onClick="start"
        android:text="@string/start"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.500"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout3x3" />

    <Button
        android:id="@+id/random3x3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:onClick="randomSchulte"
        android:text="@string/random"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/start3x3" />

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout3x3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/schulte3x3_4"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:onClick="calcTime"
            android:textSize="36sp"
            app:layout_column="0"
            app:layout_row="1" />

        <Button
            android:id="@+id/schulte3x3_7"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:onClick="calcTime"
            android:textSize="36sp"
            app:layout_column="0"
            app:layout_row="2" />

        <Button
            android:id="@+id/schulte3x3_9"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:onClick="calcTime"
            android:textSize="36sp"
            app:layout_column="2"
            app:layout_row="2" />

        <Button
            android:id="@+id/schulte3x3_2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:onClick="calcTime"
            android:textSize="36sp"
            app:layout_column="1"
            app:layout_row="0" />

        <Button
            android:id="@+id/schulte3x3_5"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:onClick="calcTime"
            android:textSize="36sp"
            app:layout_column="1"
            app:layout_row="1" />

        <Button
            android:id="@+id/schulte3x3_3"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:onClick="calcTime"
            android:textSize="36sp"
            app:layout_column="2"
            app:layout_row="0" />

        <Button
            android:id="@+id/schulte3x3_8"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:onClick="calcTime"
            android:textSize="36sp"
            app:layout_column="1"
            app:layout_row="2" />

        <Button
            android:id="@+id/schulte3x3_1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:onClick="calcTime"
            android:textSize="36sp"
            app:layout_column="0"
            app:layout_row="0" />

        <Button
            android:id="@+id/schulte3x3_6"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:onClick="calcTime"
            android:textSize="36sp"
            android:typeface="monospace"
            app:layout_column="2"
            app:layout_row="1" />
    </androidx.gridlayout.widget.GridLayout>

    <TextView
        android:id="@+id/result3x3"
        android:layout_width="360dp"
        android:layout_height="160dp"
        android:layout_marginTop="16dp"
        android:gravity="center|top"
        android:textColor="@color/colorResult"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/random3x3" />
</androidx.constraintlayout.widget.ConstraintLayout>